<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/cvItemMovie"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        card_view:cardCornerRadius="4dp">

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

        <ImageView
                android:id="@+id/ivMovieItemImage"
                android:background="@color/colorAccent"
                android:layout_width="100dp"
                android:layout_height="match_parent" card_view:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" android:layout_marginTop="8dp"
                card_view:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
                card_view:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
                android:layout_gravity="center_horizontal|start"
                android:id="@+id/tvItemMovieTitle"
                android:text="lololololo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                card_view:layout_constraintStart_toEndOf="@+id/ivMovieItemImage"
                android:layout_marginStart="8dp" android:layout_marginTop="8dp"
                card_view:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="8dp"
                card_view:layout_constraintEnd_toEndOf="parent"/>

        <TextView
                android:id="@+id/tvItemMovieOverview"
                android:text="lkaajlflkasd"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:ellipsize="end"
                card_view:layout_constraintStart_toEndOf="@+id/ivMovieItemImage"
                android:layout_marginStart="8dp" card_view:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" android:layout_marginBottom="8dp"
                card_view:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
                card_view:layout_constraintTop_toBottomOf="@+id/tvItemMovieTitle"/>

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>